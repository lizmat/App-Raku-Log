<html>
<head>
  <title>Log of #<.channel> on <.date-human></title>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <link rel="stylesheet" type="text/css" href="style.css">
</head>
<body>
  <h1 align="center" style="font-weight: bold">#<.channel></h1>
  <&links($_, .channel, .date)>
  <hr/>
  <table class="chat" valign="top">
    <@entries>
      <?.control-events>
        <tr class="special" id="<.relative-target>"><td colspan="2"><a href="#<.relative-target>">ยง</a>
        <@targets><a name="<$_>"/></@>
        <@control-events>
          <b><.key></b> <&HTML(.value)>
        </@>
        </td></tr>
      </?>
      <!.control-events>
        <?{ .sender && .sender ne '"'}>
          <!{ .commit }>
            <tr id="nick">
              <td class="nick" style="font-size: 110%;"><&HTML(.sender)></td>
              <td id="<.relative-target>" align="right"><a href="#<.relative-target>">ยง</a></td>
            </tr>
          </!>
        </?>
        <tr><td class="talk odd"
          <?{ .commit }> id="commit"</?>
          <?{ .test-t }> id="test-t"</?>
        ><@targets><a name="<$_>"/></@>
        <&HTML(.message)></td>
        <?.hh-mm>
          <td align="right"><.hh-mm></td>
        </?>
        <!.hh-mm>
          <td></td>
        </!>
        </tr>
      </!>
    </@>
  </table>
  <&links($_, .channel, .date)>
  <div id="footer">Powered by <a href="https://cro.services">Cro</a> and the <a href="https://raku.org">Raku Programming Language</a><br/>
  Please report any issues / comments / feature requests <a href="https://github.com/lizmat/App-IRC-Log/issues">as an issue on App::IRC::Log</a>. Thank you!</div>
</body>
</html>

<:sub links($_, $channel, $date)>
<hr/>
<table width="100%">
  <tr>
    <td align="left"> 
      <a href="first"><span style="font-weight: bold">|&lt;</span></a>
      &nbsp;
      <a href="<.prev-year>"><span style="font-weight: bold">&lt;&lt;&lt;</span></a>
      &nbsp;
      <a href="<.prev-month>"><span style="font-weight: bold">&lt;&lt;</span></a>
      &nbsp;
      <a href="prev/<.date>"><span style="font-weight: bold">&lt;</span></a>
      &nbsp;
      <span style="font-weight: bold"><.date-human></span>
      &nbsp;
      <a href="next/<.date>"><span style="font-weight: bold">&gt;</span></a>
      &nbsp;
      <a href="<.next-month>"><span style="font-weight: bold">&gt;&gt;</span></a>
      &nbsp;
      <a href="<.next-year>"><span style="font-weight: bold">&gt;&gt;&gt;</span></a>
      &nbsp;
      <a href="last"><span style="font-weight: bold">&gt;|</span></a>
    </td>
    <td>
      <form action="search.html">Search&nbsp;<input name="query"/></form>
    </td>
    <td align="right">
      <form>
      <label for="channel">Channel</label>
      <select name="channel" id="channel" onchange="if (this.value) window.location.href=this.value">>
        <@channels>
          <option value="/<$_>/this/<$date>"<?{ $_ eq $channel }> selected</?>><$_></option>
        </@>
      </select>
      </form>
    </td>
    <td align="right">
      <a href="today">Today</a>
      <a href="random">I feel lucky</a>
      <a href="<.date>.log">Raw</a>
      <a href="index.html">Index</a>
      <a href="/home.html">Home</a>
    </td>
  </tr>
</table>
</:>
